<% content_for :body_content_title do %>
  <%= @video.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @video.title %>
    </p>
  </section>
  <section>
    <h1>Url</h1>
    <p>
      <%=raw @video.url %>
    </p>
  </section>
  <section>
    <h1>Caption</h1>
    <p>
      <%=raw @video.caption %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="videos">
      <% @videos.each do |video| %>
        <li>
          <%= link_to video.title, refinery.videos_video_path(video) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
